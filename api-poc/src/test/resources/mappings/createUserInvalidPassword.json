{
    "request":{
       "method":"POST",
       "url":"/openidm/managed/alpha_user?_action=create",
       "bodyPatterns":[
          {
             "matchesJsonPath":"$[?(@.password == 'wrong')]"
          }
       ]
    },
    "response":{
       "status":403,
       "jsonBody":{
          "code":403,
          "reason":"Forbidden",
          "message":"Policy validation failed",
          "detail":{
             "result":false,
             "failedPolicyRequirements":[
                {
                   "policyRequirements":[
                      {
                         "params":{
                            "max-password-length":0,
                            "min-password-length":8
                         },
                         "policyRequirement":"LENGTH_BASED"
                      }
                   ],
                   "property":"password"
                },
                {
                   "policyRequirements":[
                      {
                         "params":{
                            "min-character-sets":0,
                            "character-sets":[
                               "0:~!&#64;#$%^&amp;*()-_&#61;&#43;[]{}|;:,.&lt;&gt;/?&#34;&#39;\\&#96;",
                               "1:0123456789",
                               "1:ABCDEFGHIJKLMNOPQRSTUVWXYZ",
                               "1:abcdefghijklmnopqrstuvwxyz"
                            ],
                            "allow-unclassified-characters":true,
                            "character-set-ranges":[
                               
                            ]
                         },
                         "policyRequirement":"CHARACTER_SET"
                      }
                   ],
                   "property":"password"
                }
             ]
          }
       }
    }
 }